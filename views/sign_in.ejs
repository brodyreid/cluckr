<%- include('./partials/header')  %>

<form action="/sign_in" method="POST">
    <div class="card" style="width: 25rem;">
        <div class="card-body">
            <div>
                <label for="username" class="form-label text-secondary">Username</label>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="e.g. Mike Wazowski">
            </div>
            <div class="float-right">
            <input type="submit" class="btn btn-outline-secondary" value="Sign In">
            </div>
        </div>
    </div>
</form>